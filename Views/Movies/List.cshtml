@model IEnumerable<MovieApp.Models.Movie>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="">
    <form action="/Movies/List" method="get">
        <label>Search</label>
        <input type="text" name="search" value="@ViewBag.search" class="form-contorl" />
        <button>Search</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
              @*  <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
                </td>*@
                <td>
                    <a asp-action="Edit" asp-controller="Movies"
                        
                        asp-route-id="@item.Id">
                        Edit
                    </a>
                    <a asp-action="Delete" asp-controller="Movies"
                        asp-route-id="@item.Id">
                        Delete
                    </a>
                    <a asp-action="Details" asp-controller="Movies"
                        asp-route-id="@item.Id">
                        Details
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
